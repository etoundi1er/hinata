<p id="notice"><%= notice %></p>

<h1>Listing Grades</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Exam</th>
      <th>Score</th>
      <th>Feedback</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.student_id %></td>
        <td><%= grade.exam_id %></td>
        <td><%= best_in_place grade, :score, :path => [@course, @exam, @grade], :as => :input, :nil => "Click me to add content!" %></td>
        <td><%= best_in_place grade, :feedback, :path => [@course, @exam, @grade] %></td>
        <td><%= link_to 'Show', [@course, @exam, grade] %></td>
        <td><%= link_to 'Edit', [:edit, @course, @exam, grade ] %></td>
        <td><%= link_to 'Destroy', [@course, @exam, grade], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% @grades.each do |grade| %>
<div class="row">
  <div class="small-3 columns">
    <p><%= grade.student.full_name %><p/>
  </div>
  <div class="small-3 columns">
    <p><%= grade.exam.title %><p/>
  </div>
  <div class="small-3 columns">
    <p><%= best_in_place grade, :score, :path => [@course, @exam, @grade], :as => :input, :nil => "Add grade" %><p/>
  </div>
  <div class="small-3 columns">
    <p><%= best_in_place grade, :feedback, :path => [@course, @exam, @grade], :as => :input, :nil => "Add content!" %><p/>
  </div>
</div>

<% end %>

<br>

