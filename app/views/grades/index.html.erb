<p id="notice"><%= notice %></p>

<h1>Listing Grades</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Exam</th>
      <th>Score</th>
      <th>Feedback</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
    <% @course.group.students.each do |s| %>
      <tr>
<!-- #         <td><%= grade.student_id %></td> -->
        <td>
          <%= s.full_name %>
        <% end %>
        </td>
        <td><%= grade.exam_id %></td>
        <td><%= grade.score %></td>
        <td><%= grade.feedback %></td>
        <td><%= link_to 'Show', [@course, @exam, grade] %></td>
        <td><%= link_to 'Edit', [:edit, @course, @exam, grade ] %></td>
        <td><%= link_to 'Destroy', [@course, @exam, grade], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

