<% provide(:title, @student.full_name) %>

<div class="page-title">
  <h1><%= @student.full_name %><span><%= link_to 'Edit', edit_student_path(@student) %>  | <%= link_to 'View all students', students_path %></span></h1>
</div>

<%= render 'shared/student_tab' %>

<%= render 'student_bio' %>

<div>
  <%= link_to 'Delete Student', @student,  class: "button alert tiny radius", method: :delete, data: { confirm: 'Are you sure?' } %>
</div>