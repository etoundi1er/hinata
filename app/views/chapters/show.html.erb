<br>
<h5><%= @chapter.chapter_title %> 
  <span class="right secondary-text">
    <%= link_to 'Edit', edit_course_chapter_path(@course, @chapter) %> | 
    <%= link_to 'Back', course_path(@course, :anchor =>'panel3') %>
  </span>
</h5>
<hr>

<p class="secondary-text">Starts: <strong><%= @chapter.chapter_start_date.to_time.strftime('%a %e %b %Y')%></strong> - 
  Ends: <strong><%= @chapter.chapter_end_date.to_time.strftime('%a %e %b %Y') %></strong></p>
  <p>
  <strong>Chapter description:</strong><br>
  <%= @chapter.chapter_description %>
  </p>
  
<h6>LESSONS</h6>
    <% @chapter.lessons.each do |lesson| %>
      <div class="panel">
        <h6>
          <span data-tooltip aria-haspopup="true" class="has-tip" title="Click to edit">
          <%= best_in_place lesson, :lesson_title, :path => [@course, lesson], :as => :textarea %>
          </span>
          <span class="right secondary-text">
            from: <%=lesson.lesson_start_date %> - 
            to: <%= lesson.lesson_end_date %></span>
        </h6>
        <br>
        <p><strong>Chapter description:</strong><br>
          <span data-tooltip aria-haspopup="true" title="Click to edit">
            <%= best_in_place lesson, :lesson_description, :path => [@course, lesson], :as => :textarea, :nil => "Click here to add content!" %>
          </span>
        </p>
      </div>
    <% end %>


