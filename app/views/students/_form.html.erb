<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend>Personal Infos</legend>

    
      <div class="row">
        <div class="medium-4 columns">
          <%= f.label :first_name %>
          <%= f.text_field :first_name %>
        </div>
        <div class="medium-4 columns">
          <%= f.label :last_name %>
          <%= f.text_field :last_name %>
        </div>
        <div class="medium-4 columns">
          <%= f.label :username %>
          <%= f.text_field :username %>
        </div>
      </div>
    
      <div class="row">
        <div class="medium-4 columns">
          <%= f.label :date_of_birth %>
          <%= f.text_field :date_of_birth, { class: "datepicker" } %>
        </div>
        
        <div class="medium-4 columns">
          <%= f.label :place_of_birth %>
          <%= f.text_field :place_of_birth %>
        </div>
        
        <div class="medium-4 columns">
          <%= f.label :gender %>
          <%= f.text_field :gender %>
        </div>
      </div>
    
  </fieldset>

  <fieldset>
    <legend>Schools' infos</legend>

      <div class="row">
        <div class="medium-4 columns">
          <%= f.label :enrollment_date %>
          <%= f.text_field :enrollment_date, { class: "datepicker" } %>
        </div>
      </div>
      <div class="row">
        <div class="medium-4 columns">
          <%= f.label :group %>
          <%= f.collection_select :group_id, Group.all, :id, :group_name, {}, {class: "chosen-select", include_blank: true, multiple: false} %>
        </div>
      </div>
    
  </fieldset>

  <fieldset>
    <legend>Contact Details</legend>

      <div class="row">
        <div class="medium-4 columns">
          <%= f.label :phone %>
          <%= f.text_field :phone %>
        </div>
        <div class="medium-8 columns">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>
      </div>
      <div class="row">
        <div class="medium-4 columns">
          <%= f.label :address_line %>
          <%= f.text_field :address_line %>
        </div>
        <div class="medium-4 columns">
          <%= f.label :city %>
          <%= f.text_field :city %>
        </div>
        <div class="medium-4 columns">
          <%= f.label :country %>
          <%= f.text_field :country %>
        </div>
       </div>
    
  </fieldset>

  <fieldset>
    <legend>Guardians</legend>

      <div class="row">
        <div class="medium-4 columns">
          <%= f.label :find_guardians %>
          <%= f.collection_select :guardian_ids, Guardian.order(:last_name), :id, :full_name, {}, {class: "chosen-select", multiple: true} %>
        </div>
      </div>
  </fieldset>

  <fieldset>
    <legend>Additional</legend>

      <div class="row">
        <div class="medium-4 columns">
          <%= f.label :photo_data %>
          <%= f.text_field :photo_data %>
        </div>
      </div>
    
  </fieldset>

  <div class="actions">
    <%= f.submit class: "button success radius" %> &nbsp;&nbsp;
    <%= link_to 'Cancel', @student,  class: "button secondary radius" %>
    <%= link_to 'Delete Student', @student,  class: "right button alert tiny radius", method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>
