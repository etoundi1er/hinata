<% provide(:title, 'User Directory') %>

<div class="page-title">
  <h1>Listing Users</h1>
</div>

<p id="notice"><%= notice %></p>

<%= grid(@users, hide_submit_button: true, hide_reset_button: true) do |g|

  g.column name:  'ID', attribute: 'id', filter: false

  g.column name:  'Name', attribute: 'first_name'

  g.column  name:  'Phone', attribute: 'phone'

  g.column  name:  'Address', attribute: 'address_line' 
  
  g.column   do |user|
    link_to('Edit', edit_user_path(user))
  end
  
  g.column   do |user|
    link_to('Show', user_path(user))
  end

end -%>


<%= link_to 'New User', new_user_path, class:"button radius" %>
