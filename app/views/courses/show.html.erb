<% provide(:title, @course.course_name) %>

<div class="page-title">
  <h1><%= @course.course_name %> <span><%= link_to 'Edit', edit_course_path(@course) %>  | 
    <%= link_to 'View all courses', courses_path %></span></h1>
</div>

<p>
  <strong>Course code:</strong>
  <%= @course.course_code %>
</p>

<p>
  <strong>Group:</strong>
  <%= link_to @course.group.group_name, @course.group %>
</p>

<p>
  <strong>Course category:</strong>
  <%= link_to @course.course_category.cc_name, @course.course_category %>
</p>


