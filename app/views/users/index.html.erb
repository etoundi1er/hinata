<% provide(:title, 'Directory') %>

<div class="page-title">
  <h1>Listing Users</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th width="10%" colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, user %></td>
        <td><%= best_in_place user, :email %></td>
        <td><%= link_to '', edit_user_path(user), class: 'fa fa-pencil-square-o' %></td>
        <td><%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-trash-o' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @users %>

<br>

<%= link_to 'New User', new_user_path, class:"button radius" %>
