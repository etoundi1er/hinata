<% provide(:title, 'Periods') %>

<div class="page-title">
  <h1>All Periods</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>Weekday</th>
      <th>Period title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td><%= period.start_time.strftime('%H:%M') %></td>
        <td><%= period.end_time.strftime('%H:%M') %></td>
        <td><%= period.weekday.strftime('%A') %></td>
        <td><%= period.period_title %></td>
        <td><%= link_to 'Show', period %></td>
        <td><%= link_to 'Edit', edit_period_path(period) %></td>
        <td><%= link_to 'Destroy', period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Period', new_period_path, class: 'button secondary' %> &nbsp; &nbsp;
<%= link_to 'Back', settings_url, class: 'button secondary radius' %>
