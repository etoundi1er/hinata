<% provide(:title, 'Exam Categories') %>

<div class="page-title">
  <h1>Exam Categories</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th width="20%" colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @exam_categories.each do |exam_category| %>
      <tr>
        <td><%= link_to exam_category.title, [@course, exam_category] %></td>
        <td><%= link_to 'Edit', [:edit, @course, exam_category] %></td>
        <td><%= link_to 'Destroy', [@course, exam_category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exam category', new_course_exam_category_path, class: 'button radius' %> &nbsp; &nbsp;
<%= link_to 'Back', course_path(@course, :anchor =>'exam'), class: 'button secondary radius' %>
