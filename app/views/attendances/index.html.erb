<% provide(:title, 'Students Attendances') %>

<div class="page-title">
  <h1>Students Attendances</h1>
</div>



<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Course</th>
      <th>Group</th>
      <th>Status</th>
      <th>Taken at</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.student_id %></td>
        <td><%= attendance.course_id %></td>
        <td><%= attendance.group_id %></td>
        <td><%= attendance.status %></td>
        <td><%= attendance.taken_at %></td>
        <td><%= attendance.employee_id %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attendance', new_group_attendance_path %>
