<% provide(:title, 'Students Attendances') %>

<div class="page-title">
  <h1>Students Attendances</h1>
</div>



<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Notes</th>
      <th>Status</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group.attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.student.full_name %></td>
        <td><%= attendance.notes %></td>
        <td><%= attendance.status %></td>
        <td><%= link_to 'Show', [@group, attendance] %></td>
        <td><%= link_to 'Edit', edit_group_attendance_path(@group, attendance) %></td>
        <td><%= link_to 'Destroy', [@group, attendance], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attendance', new_group_attendance_path %>
