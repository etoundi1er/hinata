<div class="panel">

  <p><strong>Description:</strong><br>
    <%= @exam.description %>
  </p>

  <p>
    <strong>Exam date:</strong>
    <%= @exam.exam_date %>
  </p>

  <p>
    <strong>Exam category:</strong>
    <%= @exam.exam_category.title %>
  </p>
  
  <p>
    <strong>Course:</strong>
    <%=@exam.course.course_name %>
  </p>

  <p>
    <strong>Group:</strong>
    <%= @exam.course.group.group_name %>
  </p>
  
  <% @course.group.students.each do |student|  %>
      <p>
        <strong><%= link_to student.full_name, student %></strong>
      </p>
    <% end %>

</div>

<%= link_to 'Edit', edit_course_exam_path, class: 'button success tiny radius' %>