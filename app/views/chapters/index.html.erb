<br>
<h5>Listing Chapters</h5>
<br>

<table>
  <thead>
    <tr>
      <th>Chapter title</th>
      <th>Chapter description</th>
      <th>Chapter start date</th>
      <th>Chapter end date</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.chapter_title %></td>
        <td><%= chapter.chapter_description %></td>
        <td><%= chapter.chapter_start_date %></td>
        <td><%= chapter.chapter_end_date %></td>
        <td><%= chapter.course_id %></td>
        <td><%= link_to 'Show', course_chapter_path(@course, chapter) %></td>
        <td><%= link_to 'Edit', edit_course_chapter_path(@course, chapter) %></td>
        <td><%= link_to 'Destroy', course_chapter_path(@course, chapter), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

