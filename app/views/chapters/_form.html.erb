<%= form_for [@course, @chapter] do |f| %>
  <% if @chapter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@chapter.errors.count, "error") %> prohibited this chapter from being saved:</h2>

      <ul>
      <% @chapter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :chapter_title %><br>
    <%= f.text_field :chapter_title %>
  </div>
  <div class="field">
    <%= f.label :chapter_description %><br>
    <%= f.text_area :chapter_description %>
  </div>
  <div class="field">
    <%= f.label :chapter_start_date %><br>
    <%= f.text_field :chapter_start_date %>
  </div>
  <div class="field">
    <%= f.label :chapter_end_date %><br>
    <%= f.text_field :chapter_end_date %>
  </div>
  <div class="field">
    <%= f.label :curriculum %><br>
    <%= f.collection_select :curriculum_id, Curriculum.all, :id, :cur_title, {}, {class: "chosen-select", include_blank: true, multiple: false} %>
       
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
