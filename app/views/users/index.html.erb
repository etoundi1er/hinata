<% provide(:title, 'Directory') %>

<div class="page-title">
  <h1>Listing Users</h1>
</div>

<table class="responsive", width="100%">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Username</th>
      <th>Date of birth</th>
      <th>Gender</th>
      <th>Address line</th>
      <th>City</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.first_name, user %></td>
        <td><%= link_to user.last_name, user %></td>
        <td><%= user.username %></td>
        <td><%= user.date_of_birth %></td>
        <td><%= user.gender %></td>
        <td><%= user.address_line %></td>
        <td><%= user.city %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= link_to '', edit_user_path(user), class: 'fa fa-pencil-square-o' %></td>
        <td><%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-trash-o' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @users %>

<br>

<%= link_to 'New User', new_user_path, class:"button radius" %>
