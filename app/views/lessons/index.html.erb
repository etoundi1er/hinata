<p id="notice"><%= notice %></p>

<h1>Listing Lessons</h1>

<table>
  <thead>
    <tr>
      <th>Lesson title</th>
      <th>Lesson description</th>
      <th>Lesson start date</th>
      <th>Lesson end date</th>
      <th>Attachment</th>
      <th>Chapter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.lesson_title %></td>
        <td><%= lesson.lesson_description %></td>
        <td><%= lesson.lesson_start_date %></td>
        <td><%= lesson.lesson_end_date %></td>
        <td><%= lesson.attachment %></td>
        <td><%= lesson.chapter %></td>
        <td><%= link_to 'Show', course_lesson_path(@course, lesson) %></td>
        <td><%= link_to 'Edit', edit_course_lesson_path(@course, lesson) %></td>
        <td><%= link_to 'Destroy', course_lesson_path(@course, lesson), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

