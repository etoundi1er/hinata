<% provide(:title, 'Guardians Directory') %>

<div class="page-title">
  <h1>Guardians Directory</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Occupation</th>
      <th>Children</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guardians.each do |guardian| %>
      <tr>
        <td><%= link_to guardian.full_name, guardian %></td>
        <td><%= guardian.phone %></td>
        <td><%= guardian.email %></td>
        <td><%= guardian.occupation %></td>
        <td><%= guardian.students.map{ |student| student.full_name }.join(', ') %></td>
        <td><%= link_to '', edit_guardian_path(guardian), class: 'fa fa-pencil-square-o' %></td>
        <td><%= link_to '', guardian, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-trash-o' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Guardian', new_guardian_path, class:"button radius" %>
